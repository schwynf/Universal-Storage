{{>header}}
<div class="container">
    <div class="row my-5">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-12">
                    <div id="add-card" class="card veryDark box-shadow">
                        <div class="card-header">
                            <h1 class="text-center">Add a New Password</h1>
                        </div>
                        <div class="card-body p-2 d-flex justify-content-center align-items-center">
                            <div class="">
                                <form id="pass-form">
                                    <div class="form-group p-2">
                                        <label class="px-2" for="site">Site: </label>
                                        <select class="form-control form-control" name="site" id="site">
                                            <option value="Facebook">&#xf082; Facebook</option>
                                            <option value="Instagram">&#xf16d; Instagram</option>
                                            <option value="Twitter">&#xf099; Twitter</option>
                                            <option value="LinkedIn">&#xf08c; LinkedIn</option>
                                            <option value="Email">&#xf0e0; Email</option>
                                            <option value="Snapchat">&#xf2ad; Snapchat</option>
                                            <option value="Youtube">&#xf167; Youtube</option>
                                            <option value="Github">&#xf092; Github</option>
                                            <option value="Other">&#xf084; Other</option>
                                        </select>
                                    </div>
                                    <div class="form-group px-2">
                                        <label for="username">Email/ Username: </label>
                                        <input id="username" class="w-100" type="text" name="username"
                                            placeholder="johndoe@email.com">
                                    </div>
                                    <div class="form-group px-2">
                                        <label for="username">Password: </label>
                                        <input class="w-100" id="password" aria-required="true" type="text"
                                            name="password" placeholder="********">
                                    </div>
                                    <button id="password-submit"
                                        class=" btn-block btn mb-3 btn-outline-light">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-12">
                    <div id="stored-card" class="card veryDark overflow-auto box-shadow">
                        {{!-- pw cards get appended here --}}
                        <div class="card-header text-center">
                            <h1>Stored Passwords</h1>
                        </div>
                        <div class="card-body p-2">
                            <div id="password-card"
                                class="d-flex flex-column justify-content-center h-100 align-items-center">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-12">
            <div class="card veryDark box-shadow">
                <div class="card-header">
                    <h1 class="text-center">Password Generator</h1>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-outline-light btn-block" id="generateBtn">Click to
                        Generate</button>
                    <div id="passwordBox" class="d-flex justify-content-center align-items-center"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-12">
            <div id="pwned-card" class="card veryDark box-shadow">
                <div class="card-header text-center">
                    <h1>Have I Been Pwned?</h1>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <div class="col-6">
                            <input id="pwned-pass" placeholder="Enter a Password" type="text"
                                class="w-100  text-center">
                            <button class="btn btn-outline-light btn-block my-3" id="pwned-pass-btn">Check
                                Pwnage</button>
                        </div>
                        <div class="col-6">
                            <input id="pwned-email" placeholder="Enter an Email" type="text" class="w-100 text-center">
                            <button class="btn btn-outline-light btn-block my-3" id="pwned-email-btn">Check
                                Pwnage</button>
                        </div>
                    </div>
                    <div class="row">
                        <div id="pwned-data" class="col-12 d-flex flex-column align-items-center">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>