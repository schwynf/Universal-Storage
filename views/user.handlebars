{{>header}}
<div class="container">
    <div class="row my-5">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-12">
                    <div id="add-card" class="card veryDark box-shadow">
                        <div class="card-header">
                            <h1 class="text-center">Add a New Password</h1>
                        </div>
                        <div class="card-body p-2 d-flex justify-content-center align-items-center">
                            <form id="pass-form">
                                <div class="form-group select-padding">
                                    <label class="px-2" for="site">Site: </label>
                                    <select class="form-control" name="site" id="site">
                                        <option value="Facebook">Facebook</option>
                                        <option value="Instagram">Instagram</option>
                                        <option value="Twitter">Twitter</option>
                                        <option value="LinkedIn">LinkedIn</option>
                                        <option value="Email">Email</option>
                                        <option value="Snapchat">Snapchat</option>
                                        <option value="Youtube">Youtube</option>
                                        <option value="Github">Github</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="form-group px-2" id="otherDiv">
                                    <label for="other">If Other </label>
                                    <input class="w-100 " type="text" id="ifOther" name="other" />
                                </div>
                                <div class="form-group px-2">
                                    <label for="username">Email/ Username: </label>
                                    <input id="username" class="w-100" type="text" name="username"
                                        placeholder="johndoe@email.com" />
                                </div>
                                <div class="form-group px-2">
                                    <label for="password">Password: </label>
                                    <input class="w-100" id="password" aria-required="true" type="text" name="password"
                                        placeholder="********" />
                                </div>
                                <button id="password-submit"
                                    class=" btn-block btn mb-3 btn-outline-light">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-12">
                    <div id="stored-card" class="mt-5 mt-lg-0 card veryDark overflow-auto box-shadow">
                        {{!-- pw cards get appended here --}}
                        <div class="card-header text-center">
                            <h1>Stored Passwords</h1>
                        </div>
                        <div class="card-body p-2">
                            <div id="password-card"
                                class="d-flex flex-column justify-content-center h-100 align-items-center">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-12">
            <div class="card veryDark box-shadow">
                <div class="card-header">
                    <h1 class="text-center">Password Generator</h1>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-outline-light btn-block" id="generateBtn">Click to
                        Generate</button>
                    <div id="passwordBox" class="d-flex justify-content-center align-items-center"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-12">
            <div id="pwned-card" class="card veryDark box-shadow">
                <div class="card-header text-center">
                    <h1>Have I Been Pwned?</h1>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <div class="col-6">
                            <input id="pwned-pass" placeholder="Password" type="text"
                                class="w-100  text-center">
                            <button class="btn btn-outline-light btn-block my-3" id="pwned-pass-btn">Check
                                Pwnage</button>
                        </div>
                        <div class="col-6">
                            <input id="pwned-email" placeholder="Email" type="text" class="w-100 text-center">
                            <button class="btn btn-outline-light btn-block my-3" id="pwned-email-btn">Check
                                Pwnage</button>
                        </div>
                    </div>
                    <div class="row">
                        <div id="pwned-data" class="col-12 d-flex flex-column align-items-center">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>